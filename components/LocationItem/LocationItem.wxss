.location-container{
  background: white;
  width: 750rpx;
  height: 200rpx;
  overflow: hidden;
  margin-top: 20px;
}

.location-photo{
  width: 150rpx;
  height: 150rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  float: left;
  border-radius: 20%;
}

.location-name{
  display: block;
  color: #333333;
  margin-top: 50rpx;
  font-size: 35rpx;
  margin-left: 30rpx;
  position: relative;
  left: 30rpx;
}

.address-container{
  margin-top: 20rpx;
  position: relative;
  left: 25rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  height: 40rpx;
  color: #a7a7a7;
}

.i-location{
  height: 40rpx;
  width: 40rpx;
  float: left;
  margin-right: 10rpx;
}