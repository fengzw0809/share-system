<view class='order-container'>
  <view class="order-main-info">
    <text>订单号: {{order.id}}</text>
    <text class='right'>{{order.borrowTime}}</text>
  </view>
  <view class='separate-line'></view>
  <view class="order-detail-info">
    <view>
      <text>租借地点</text><text class='right'>{{order.borrowLocation}}</text>
    </view>
    <view wx:if="{{order.status === 0}}">
      <text>费用合计</text><text class='right'>{{order.price}} 元</text>
    </view>
    <view wx:if="{{order.status === 1}}">
      <text>时长</text><text class='right'>{{order.duration}} 分钟</text>
    </view>
  </view>
</view>