.title{
  display: block;
  color: #333333;
  font-size: 55rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
}

.tip{
  display: block;
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  color: #b7b7b7;
}

.deposit-container{
  margin: auto;
  margin-top: 50rpx;
  width: 690rpx;
  height: 330rpx;
  background: white;
  border-radius: 30rpx;
  box-shadow: 0 0 50rpx #ededed;
  position: relative;
  overflow: hidden;
}

.deposit-amount{
  display: block;
  color: #9dd849;
  font-size: 85rpx;
  position: absolute;
  top: 70rpx;
  left: 50rpx;
}

.deposit-text{
  display: block;
  position: absolute;
  top: 185rpx;
  left: 75rpx;
  font-size: 31rpx;
}

.i-wallet{
  height: 200rpx;
  width: 229rpx;
  position: absolute;
  bottom: -20rpx;
  right: -20rpx;
}

.wechat-pay-container{
  background: white;
  width: 750rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
}

.i-wechat-pay{
  display: inline-block;
  height: 50rpx;
  width: 50rpx;
  background: #08d908;
  border-radius: 15%;
  margin-left: 30rpx;
  position: relative;
  top: 15rpx;
}

.i-wechat-pay > image{
  height: 32.5rpx;
  width: 38.5rpx;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -19rpx;
  margin-top: -16.25rpx;
}

.wechat-pay-container > text {
  font-size: 30rpx;
  display: inline-block;
  margin-left: 30rpx;
}

.radio{
  height: 30rpx;
  width: 30rpx;
  float: right;
  margin-right: 50rpx;
}

button{
  width: 700rpx;
  position: fixed;
  bottom: 50rpx;
  height: 80rpx;
  margin-left: 25rpx;
  background: #444444;
  color: white;
  display: block;
  font-size: 32rpx;
  border-radius: 40rpx;
}

